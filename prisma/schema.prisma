generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id          String    @id @default(uuid()) @db.Uuid
  username    String    @unique
  password    String
  protocol    Protocol  @relation(fields: [protocolId], references: [id])
  protocolId  String    @unique @db.Uuid
  character   Character[]
  status      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Protocol {
  id    String @id @default(uuid()) @db.Uuid
  user  User?
}

model Character {
  id              String @id @default(uuid()) @db.Uuid
  name            String @db.VarChar(80)
  surname         String @db.VarChar(255)
  xp              Int
  user            User   @relation(fields: [userId], references: [id])
  userId          String @unique @db.Uuid
  background      String
  campaigns       CampaignCharacter[]
  baseAttributes  CharacterBaseAttributes[]
  attributes      CharacterAttributes[]
}

model Campaign {
  id          String @id @default(uuid()) @db.Uuid
  name        String @db.VarChar(80)
  master      String @db.VarChar(255)
  background  String
  characters  CampaignCharacter[]
}

model ClassRpg {
  id            String @id @default(uuid()) @db.Uuid
  name          String @db.VarChar(40)
  description   String
}

model CampaignCharacter {
  character   Character @relation(fields: [charId], references: [id])
  charId      String    @db.Uuid
  campaign    Campaign  @relation(fields: [campaignId], references: [id])
  campaignId  String    @db.Uuid
  finalDesc   String

  @@id([charId, campaignId])
}

model Attributes {
  id              String @id @default(uuid()) @db.Uuid
  name            String @db.VarChar(80)
  description     String
  baseAttributes  CharacterBaseAttributes[]
  attributes      CharacterAttributes[]
}

model CharacterBaseAttributes {
  character   Character   @relation(fields: [charId], references: [id])
  charId      String      @db.Uuid
  attributes  Attributes  @relation(fields: [attrId], references: [id])
  attrId      String      @db.Uuid
  value       Int

  @@id([charId, attrId])
}

model CharacterAttributes {
  character   Character   @relation(fields: [charId], references: [id])
  charId      String      @db.Uuid
  attributes  Attributes  @relation(fields: [attrId], references: [id])
  attrId      String      @db.Uuid
  value       Int

  @@id([charId, attrId])
}